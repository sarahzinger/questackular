{
    "name": "Questackular!",
    "short_name": "Questackular!",
    "description": "Create custom quizzes containing curated questions and captivating content",
    "version": "1.0.0.1",
    "manifest_version": 2,
    "icons": {
        "48":"questackular.png",
        "128": "questackular.png"
    },
    "homepage_url": "http://questackular.herokuapp.com",
    "permissions": [
        "webRequest",
        "*://*/*",
        "cookies",
        "debugger",
        "declarativeContent",
        "identity",
        "tabs",
        "https://*/*",
        "http://*/*",
        "unlimitedStorage"
    ],
    "default_locale": "en",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/dependencies/jquery.min.js", "js/content.js"],
        "run-at": "document_idle"
    }],
    "browser_action": {
        "default_icon": "questackular.png",
        "default_title": "Questackular!",
        "default_popup": "popup.html"
    },
    "omnibox": {
        "keyword": "q"
    }
}